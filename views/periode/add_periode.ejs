<div id="modalTambah" class="modal">
    <div class="modal-background"></div>
    <div class="modal-content">
        <div class="box">
            <h2 class="title is-4">Tambah Periode</h2> <!-- Judul "Tambah Agama" -->
            <hr>
            <!-- Form untuk menginput data -->
            <form id="formTambahData" action="/data/periode" method="POST">
                <!-- Input fields -->
                <div class="field">
                    <label class="label">Tahun Periode :</label>
                    <div class="control">
                        <input class="input" type="text" name="tahun_periode" id="tahun_periode" placeholder="Masukkan tahun periode" required>
                    </div>
                </div>

                <div class="field">
                    <label class="label">Periode Penilaian :</label>
                    <div class="control">
                        <input class="input" type="text" name="periode_penilaian" id="periode_penilaian" placeholder="Masukkan keterangan periode" required>
                    </div>
                </div>
                <!-- Tambahkan input fields lainnya sesuai kebutuhan -->
                <!-- Tombol untuk menutup modal -->
                <button type="button" id="btnCloseModal" class="mr-3 button is-light mt-3">Tutup</button>
                <button type="submit" class="button is-success mt-3">Simpan</button>
            </form>
        </div>
    </div>
    <button class="modal-close is-large" aria-label="close"></button>
</div>